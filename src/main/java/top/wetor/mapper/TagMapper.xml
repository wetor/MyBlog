<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.wetor.mapper.TagMapper">
    <insert id="insertTag" parameterType="Tag">
        insert into tb_tag
        values( null ,
            #{t_content} ,
            #{t_count}
        )
    </insert>
    <delete id="deleteTagById" parameterType="Integer">
        delete from tb_tag
        Where t_id = #{id}
    </delete>
    <delete id="deleteTagByContent" parameterType="String">
        delete from tb_tag
        Where t_content = #{content}
    </delete>
    <update id="updateTagByString" parameterType="String">
        <if test="tags!=null">
            insert tb_tag(t_id,t_content,t_count) values
            <foreach item="content" collection="tags.split(',')" separator="," >
                (null,#{content},1)
            </foreach>
            on duplicate key update t_count=t_count+1;
        </if>
    </update>

    <update id="updateTagAll" parameterType="java.util.List">
        <if test="list!=null">
            <foreach item="tags" collection="list" >
                insert tb_tag(t_id,t_content,t_count) values
                <foreach item="content" collection="tags.split(',')" separator="," >
                    (null,#{content},1)
                </foreach>
                on duplicate key update t_count=t_count+1;
            </foreach>
        </if>
    </update>



    <select id="selectTagById" parameterType="Integer" resultType="Tag">
        select * from tb_tag
        where t_id = #{id}
    </select>

    <select id="selectTagByContent" parameterType="String" resultType="Tag">
        select * from tb_tag
        where t_content = #{content}
    </select>

    <select id="selectTagCount" resultType="Integer">
        select count(*) from tb_tag
    </select>




</mapper>