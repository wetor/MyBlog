<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.wetor.dao.TagDao">
    <!-- 数据库表映射 -->
    <resultMap id="tagRM" type="top.wetor.domain.Tag">
        <id property="id" column="t_id"/>
        <result property="content" column="t_content"/>
        <result property="count" column="t_count"/>
    </resultMap>
    <!-- TODO Tag多表映射-->

    <insert id="insertTag" parameterType="top.wetor.domain.Tag">
        insert into tb_tag
        values( null ,
            #{content} ,
            #{count}
        )
    </insert>
    <delete id="deleteTagById" parameterType="Integer">
        delete from tb_tag
        where t_count = 1 and t_id = #{id};

        update tb_tag set t_count = t_count-1
        where t_count > 1 and t_content = #{content};
    </delete>
    <delete id="deleteTagByString" parameterType="String">
        <if test="tags!=null">
            -- 删除数量仅有一个文章使用的标签
            delete from tb_tag
            where t_id in (
                select * from (
                    select t_id from tb_tag where t_count = 1 and t_content in
                    <foreach item="content" collection="tags.split(',')" separator="," open="(" close=")">
                        #{content}
                    </foreach>
                )as d
            );
            -- 多个文章使用的标签则减少1
            update tb_tag set t_count = t_count-1
            where t_id in (
                select * from (
                    select t_id from tb_tag where t_count > 1 and t_content in
                    <foreach item="content" collection="tags.split(',')" separator="," open="(" close=")">
                        #{content}
                    </foreach>
                )as d
            );
        </if>
    </delete>
    <update id="updateTagByString" parameterType="String">
        <if test="tags!=null">
            insert tb_tag(t_id,t_content,t_count) values
            <foreach item="content" collection="tags.split(',')" separator="," >
                (null,#{content},1)
            </foreach>
            on duplicate key update t_count=t_count+1;
        </if>
    </update>

    <update id="updateTagAll" parameterType="java.util.List">
        <if test="list!=null">
            <foreach item="tags" collection="list" >
                insert tb_tag(t_id,t_content,t_count) values
                <foreach item="content" collection="tags.split(',')" separator="," >
                    (null,#{content},1)
                </foreach>
                on duplicate key update t_count=t_count+1;
            </foreach>
        </if>
    </update>



    <select id="selectTagById" parameterType="Integer" resultMap="tagRM">
        select * from tb_tag
        where t_id = #{id}
    </select>

    <select id="selectTagByContent" parameterType="String" resultMap="tagRM">
        select * from tb_tag
        where t_content = #{content}
    </select>

    <select id="selectTagCount" resultType="Integer">
        select count(*) from tb_tag
    </select>




</mapper>